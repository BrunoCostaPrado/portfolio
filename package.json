		"@tailwindcss/postcss": "^4.1.5",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/bun": "^1.2.11",
		"@types/node": "^22.15.3",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.3",
		"husky": "^9.1.7",
		"patch-package": "^8.0.0",
		"postcss": "^8.5.3",
		"postinstall": "^0.11.1",
		"react-scan": "^0.3.3",
		"tailwindcss": "^4.1.5",
		"tw-animate-css": "^1.2.8",
		"typescript": "^5.8.3"
	},
	"ct3aMetadata": {
		"initVersion": "7.39.3"
	},
