{
	"name": "portfolio",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"repository": "https://github.com/BrunoCostaPrado/portfolio",
	"scripts": {
		"act": "act -W '.github/workflows/'",
		"build": "bun reset && bun --bun next build",
		"dev": "bun --bun next dev --turbo",
		"lint": "biome check --write .",
		"postbuild": "next-sitemap ",
		"postinstall": "patch-package",
		"preview": "bun --bun next build && bun --bun next start",
		"reset": "rm -rf .next/ && rm -rf cache/nodejs-compile-cache",
		"start": "bun --bun next start",
		"typecheck": "tsc --noEmit",
		"prepare": "husky",
		"test": "cypress run",
		"cypress": "cypress open"
	},
	"dependencies": {
		"@radix-ui/react-select": "^2.2.2",
		"@radix-ui/react-slot": "^1.2.0",
		"@redbruno/isdev": "^1.0.2",
		"@t3-oss/env-nextjs": "^0.13.4",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.503.0",
		"next": "^15.3.1",
		"next-intl": "^4.1.0",
		"next-sitemap": "^4.2.3",
		"posthog-js": "^1.239.0",
		"posthog-node": "^4.15.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"tailwind-merge": "^3.2.0",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
